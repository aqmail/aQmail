#!/bin/sh
#********************************************************************************
# Create compile, load, makelib

CFLAGS=`cat conf-qlibs | grep ^CFLAGS 2>/dev/null | cut -d= -f2`

echo -n "Checking for compile ... "
CC="cc"
( echo '#!/bin/sh'
  echo exec "$CC" "$CFLAGS" -c '${1+"$@"}' ) > compile
chmod 755 compile
echo "created!"

echo -n "Checking for makelib ... "
( echo '#!/bin/sh' ;
  echo "" ;
  echo 'main="$1"; shift' ; \
  echo 'rm -f "$main"' ; \
  echo 'ar cr "$main" ${1+"$@"}' ; \
  echo 'ranlib "$main"') > makelib
chmod 755 makelib
echo "created!"
